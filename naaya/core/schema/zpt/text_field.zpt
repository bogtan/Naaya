<tal:block define="input_id string:${options/name}-input;
                   value python:options['form_data'][options['name']]">
<div>
<label tal:attributes="for input_id" tal:content="options/widget/label" />
<input type="text"
       tal:attributes="name options/name;
                       value value;
                       id input_id" />
</div>
</tal:block>
